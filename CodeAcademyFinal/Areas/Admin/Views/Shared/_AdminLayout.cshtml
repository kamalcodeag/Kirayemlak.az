<!DOCTYPE html>
<html lang="az">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="www.kirayemlak.az - Azərbaycanda daşınmaz əmlakın aylıq və günlük kirayəsi üçün nəzərdə tutulmuşdur. Veb portal Code Academy tədris mərkəzinin məzunu Kamal Quliyevin tədris müddətinin son mərhələsində təqdim etdiyi final layihəsidir.">
    <meta name="keywords"
          content="kiraye,icare,satish,dashinmaz,emlak,mulk,menzil,ev,villa,bag,torpaq,qaraj,ofis,obyekt,ayliq,gunluk,reklam,rent,house,home,estate,garden,property,sale">
    <meta name="author" content="Kamal Quliyev">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kirayemlak.az veb portalının idarəetmə bölməsi</title>
    <script src="https://kit.fontawesome.com/8fa1777ed8.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/AdminPanelFiles/fonts/maven-pro-light.css">
    <link rel="stylesheet" href="~/AdminPanelFiles/assets/css/style.css">
</head>

<body>
    <!-- FOR SMALL SCREEN section start -->
    <section id="for-small-screen">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h6>Kirayemlak.az veb portalının idarəetmə bölməsi yalnız böyük ekranlar üçün nəzərdə tutulub</h6>
                </div>
            </div>
        </div>
    </section>
    <!-- FOR SMALL SCREEN section end -->




    <section id="container">
        <!--HEADER start-->
        <header class="header black-bg d-flex align-items-center justify-content-between">
            <div class="row w-100">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <h5 class="m-0">
                        <strong>Kirayemlak.az veb portalının idarəetmə bölməsi</strong>
                    </h5>
                    <div class="top-menu">
                        <ul class="nav pull-right top-menu">
                            <li><a class="btn btn-success text-white" asp-area="Admin" asp-controller="Hesab" asp-action="Shifrenideyish">Şifrəni dəyiş</a></li>
                            <li><a class="logout" asp-area="Admin" asp-controller="Hesab" asp-action="Chixish">Hesabdan çıx</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!--HEADER end-->
        <!-- SIDEBAR section start -->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a class="@(ViewBag.Home == "Home" ? "active": "")" asp-area="Admin" asp-controller="Anasehife" asp-action="Index">
                            <i class="fa fa-dashboard"></i>
                            <span>Ana səhifə</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a class="@(ViewBag.Position == "Position" ? "active" : "")" href="javascript:void(0)">
                            <i class="fas fa-toolbox"></i>
                            <span>Vəzifə</span>
                        </a>
                        <ul class="sub">
                            <li>
                                <a asp-area="Admin" asp-controller="Vezife" asp-action="Siyahi">
                                    <i class="fas fa-list-ul"></i>
                                    <span>Siyahı</span>
                                </a>
                            </li>
                            <li>
                                <a asp-area="Admin" asp-controller="Vezife" asp-action="Yarat">
                                    <i class="fas fa-plus"></i>
                                    <span>Yeni vəzifə</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a class="@(ViewBag.Employees == "Employees" ? "active" : "")" href="javascript:void(0)">
                            <i class="fas fa-users-cog"></i>
                            <span>İşçilər</span>
                        </a>
                        <ul class="sub">
                            <li>
                                <a asp-area="Admin" asp-controller="Ishchiler" asp-action="Siyahi">
                                    <i class="fas fa-list-ul"></i>
                                    <span>Siyahı</span>
                                </a>
                            </li>
                            <li>
                                <a asp-area="Admin" asp-controller="Ishchiler" asp-action="Yarat">
                                    <i class="fas fa-plus"></i>
                                    <span>Yeni işçi</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a class="@(ViewBag.Rules == "Rules" ? "active" : "")" asp-area="Admin" asp-controller="Qaydalar" asp-action="Index">
                            <i class="fas fa-gavel"></i>
                            <span>Qaydalar</span>
                        </a>
                    </li>

                    <li>
                        <a class="@(ViewBag.Advertisement == "Advertisement" ? "active" : "")" asp-area="Admin" asp-controller="Reklam" asp-action="Index">
                            <i class="fas fa-bullhorn"></i>
                            <span>Reklam</span>
                        </a>
                    </li>

                    <li>
                        <a class="@(ViewBag.Messages == "Messages" ? "active" : "")" asp-area="Admin" asp-controller="Gelenmektublar" asp-action="Siyahi">
                            <i class="far fa-envelope"></i>
                            <span>Gələn məktublar</span>
                        </a>
                    </li>

                    <li>
                        <a class="@(ViewBag.Users == "Users" ? "active" : "")" asp-area="Admin" asp-controller="Istifadechiler" asp-action="Siyahi">
                            <i class="fas fa-users"></i>
                            <span>İstifadəçilər</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a class="@(ViewBag.Announcements == "Announcements" ? "active" : "")" href="javascript:void(0)">
                            <i class="fas fa-clipboard"></i>
                            <span>Elanlar</span>
                        </a>
                        <ul class="sub">
                            <li>
                                <a asp-area="Admin" asp-controller="Elanlar" asp-action="Gozleyen">
                                    <i class="far fa-clock"></i>
                                    <span>Gözləyən</span>
                                </a>
                            </li>
                            <li>
                                <a asp-area="Admin" asp-controller="Elanlar" asp-action="Aktiv">
                                    <i class="fas fa-clipboard-check"></i>
                                    <span>Aktiv</span>
                                </a>
                            </li>
                            <li>
                                <a asp-area="Admin" asp-controller="Elanlar" asp-action="Tesdiqedilmemish">
                                    <i class="fas fa-ban"></i>
                                    <span>Təsdiq edilməmiş</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </aside>
        <!-- SIDEBAR section end -->
        <!--MAIN CONTENT section start-->
        <section id="main-content" style="min-height:90vh;padding:100px 0px;">
            <section class="container">
                @RenderBody()
            </section>
        </section>
        <!--MAIN CONTENT section end-->
        <!--FOOTER start-->
        <footer style="background-color:#68DFF0;">
            <div class="container py-3">
                <div class="row">
                    <div class="col-8 d-flex justify-content-end align-items-center">
                        <span class="footer-copyright">2019 - Kirayemlak.az</span>

                    </div>
                    <div class="col-4 d-flex justify-content-end">
                        <i class="fa fa-angle-up"></i>
                    </div>
                </div>
            </div>

        </footer>
        <!--FOOTER end-->
    </section>






    <script src="~/MainPageFiles/js/jQueryConnection.js"></script>


    @RenderSection("scripts", required: false)

    <script src="~/AdminPanelFiles/assets/js/main.js"></script>

</body>

</html>