@model  IQueryable<Message>

@{ 
    int number = ViewBag.Number;
}

<table data-id="@ViewBag.DataId" class="table table-hover table-bordered ">
    <thead class="thead-dark">
        <tr>
            <th>№</th>
            <th>Ad, Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Tarix</th>
            <th>Mövzu</th>
            <th>Müraciət</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
        <tr>
            <td>@(number++)</td>
            <td>@message.FullName</td>
            <td>@message.Email</td>
            <td>@message.PhoneNumber</td>
            <td>@message.SentTime.ToString("dd/MM/yyyy")</td>
            <td>@message.Subject</td>
            <td>
                <a asp-area="Admin" asp-controller="Gelenmektublar" asp-action="Mektub" asp-route-id="@message.Id">
                    <i class="fas fa-info-circle info-icon" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>