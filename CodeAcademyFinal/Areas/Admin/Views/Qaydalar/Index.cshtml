<!-- ---TEMPDATA RULES UPDATED--- -->
@if (TempData["RuleUpdated"] != null)
{
    <div class="row mb-5">
        <div class="col-xs-12">
            <p class="text-success">Qaydalara düzəliş edildi.</p>
        </div>
    </div>
}
<!-- +++TEMPDATA RULES UPDATED+++ -->

<h3 class="mb-5">Qaydalara düzəliş et</h3>
<form asp-area="Admin" asp-controller="Qaydalar" asp-action="Index" asp-route-id="@Model.Id" method="post" class="row">
    <div class="col-12">
        <textarea asp-for="RuleText" style="resize:none;" class="form-group" rows="10" cols="70">
                @Model.RuleText
        </textarea>
        <span asp-validation-for="RuleText" class="text-danger"></span>
    </div>
    <div class="col-12">
        <input type="submit" class="form-group btn btn-primary" value="Təsdiqlə">
    </div>
</form>

