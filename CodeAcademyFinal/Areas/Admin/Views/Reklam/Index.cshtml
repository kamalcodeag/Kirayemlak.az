@model  Advertisement

<!-- ---TEMPDATA ADVERTISEMENT UPDATED--- -->
@if (TempData["AdvertisementUpdated"] != null)
{
    <div class="row mb-5">
        <div class="col-xs-12">
            <p class="text-success">Reklam görüntüsü dəyişdirildi.</p>
        </div>
    </div>
}
<!-- +++TEMPDATA ADVERTISEMENT UPDATED+++ -->

<h3 class="mb-5">Reklam görüntüsünü dəyiş</h3>
<div class="row mt-3 mb-5">
    <div class="col-12">
        <img src="~/MainPageFiles/images/advertisements/@ViewBag.AdvertisementURL" style="width:250px;height:250px;object-fit:cover;" />
    </div>
</div>
<form asp-area="Admin" asp-controller="Reklam" asp-action="Index" asp-route-id="@ViewBag.AdvertisementId" method="post" enctype="multipart/form-data" class="row">
    <div class="col-12 position-relative">
        <input asp-for="UploadFile" class="create-announcement-input-upload input-upload input-upload-for-advs input-login-register-pages" style="width:600px;" />
        <input class="input-upload-mask input-login-register-pages" type="button" value="Şəkil(.jpg, .jpeg) yüklə" style="width:600px;" />
        <div class="position-relative" style="width:600px;">
            <span asp-validation-for="UploadFile" class="text-danger" style="position:relative;top:45px;"></span>
            <span class="register-message register-message-for-advs" style="position:absolute;top:50px;right:0;"></span>
        </div>
    </div>
    <div class="col-12 mt-5 pt-3">
        <input type="submit" class="form-group btn btn-primary" value="Təsdiqlə">
    </div>
</form>


